module tb;
reg clk;
real tp, freq;

// Use a seprarate initial block for command line argument passing
initial begin 
	$value$plusargs("freq=%f", freq); //in MHz
	// convert frequency to time period
	tp = 1000 / freq; // in ns
end

initial begin 
	clk = 1'b0;
	forever begin
		#1 clk = ~clk;
	end
end


// dump waves
initial begin 
	$dumpfile("waves.vcd");
	$dumpvars;
	#200;
	$finish;
end

endmodule
